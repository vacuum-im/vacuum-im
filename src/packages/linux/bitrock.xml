<project>
    <shortName>vacuum</shortName>
    <fullName>Vacuum-IM</fullName>
    <version>1.2.0</version>
    <installerFilename>${product_shortname}_${product_version}_${platform_name}-installer.${platform_exec_suffix}</installerFilename>
    <readmeFile>../../../README</readmeFile>
    <licenseFile>../../../COPYING</licenseFile>
    <logoImage>../../../resources/menuicons/shared/mainwindowlogo48.png</logoImage>
    <defaultLanguage>auto</defaultLanguage>
    <allowLanguageSelection>1</allowLanguageSelection>
    <postInstallationActionList>
        <addLibraryToPath>
            <path>${installdir}/lib</path>
        </addLibraryToPath>
        <createSymLink>
            <linkName>${installdir}/lib/libvacuumutils.so.1.0</linkName>
            <target>${installdir}/lib/libvacuumutils.so.1.0.0</target>
        </createSymLink>
        <createSymLink>
            <linkName>${installdir}/lib/libvacuumutils.so.1</linkName>
            <target>${installdir}/lib/libvacuumutils.so.1.0.0</target>
        </createSymLink>
        <createSymLink>
            <linkName>${installdir}/lib/libvacuumutils.so</linkName>
            <target>${installdir}/lib/libvacuumutils.so.1.0.0</target>
        </createSymLink>
    </postInstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>JRuDevels</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Cross-platform XMPP Client</comment>
                    <exec>${installdir}/bin/vacuum</exec>
                    <icon>${installdir}/share/vacuum/vacuum.ico</icon>
                    <name>${product_fullname}</name>
                    <path>${installdir}/bin</path>
                    <platforms>linux</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec></windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Binaries</description>
                    <destination>${installdir}/bin</destination>
                    <name>binaries</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../vacuum</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Libraries</description>
                    <destination>${installdir}/lib</destination>
                    <name>libraries</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../libs/libvacuumutils.so.1.0.0</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Plugins</description>
                    <destination>${installdir}/lib/vacuum</destination>
                    <name>plugins</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../plugins</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Resources</description>
                    <destination>${installdir}/share/vacuum</destination>
                    <name>resources</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../resources</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../../../vacuum.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Translations</description>
                    <destination>${installdir}/share/vacuum</destination>
                    <name>translations</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../translations</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Documents</description>
                    <destination>${installdir}/share/doc/vacuum</destination>
                    <name>documents</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../AUTHORS</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../CHANGELOG</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../COPYING</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../README</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_fullname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

