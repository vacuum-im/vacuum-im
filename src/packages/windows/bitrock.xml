<project>
    <shortName>vacuum</shortName>
    <fullName>Vacuum-IM</fullName>
    <version>1.2.0</version>
    <installerFilename>${product_shortname}_${product_version}_${platform_name}-installer.${platform_exec_suffix}</installerFilename>
    <readmeFile>../../../README</readmeFile>
    <licenseFile>../../../COPYING</licenseFile>
    <logoImage>../../../resources/menuicons/shared/mainwindowlogo48.png</logoImage>
    <defaultLanguage>auto</defaultLanguage>
    <allowLanguageSelection>1</allowLanguageSelection>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>JRuDevels</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Cross-platform XMPP Client</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>${product_fullname}</name>
                    <path></path>
                    <platforms>windows</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/vacuum.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/vacuum.exe</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Binaries</description>
                    <destination>${installdir}</destination>
                    <name>binaries</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../vacuum.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Libraries</description>
                    <destination>${installdir}</destination>
                    <name>libraries</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../vacuumutils.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../libeay32.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../ssleay32.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../QtCore4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../QtGui4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../QtNetwork4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../QtWebKit4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../QtXml4.dll</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>../../../imageformats</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../../../msvcr90.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../msvcp90.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Microsoft.VC90.CRT.manifest</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Plugins</description>
                    <destination>${installdir}</destination>
                    <name>plugins</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../plugins</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Resources</description>
                    <destination>${installdir}</destination>
                    <name>resources</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../resources</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../../../vacuum.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Translations</description>
                    <destination>${installdir}</destination>
                    <name>translations</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../../../translations</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Documents</description>
                    <destination>${installdir}</destination>
                    <name>documents</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../AUTHORS</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../CHANGELOG</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../COPYING</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../README</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Cross-platform XMPP Client</comment>
                    <name>${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/vacuum.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/vacuum.exe</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_fullname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

